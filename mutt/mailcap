# mailcap file for mutt

application/msword; ~/.mutt/view_attachment %s "-" '/Applications/Microsoft\ Word.app'
application/pdf; ~/.mutt/view_attachment %s pdf '/Applications/Preview.app' 

image/jpg; ~/.mutt/view_attachment %s jpg '/Applications/Preview.app'
image/jpeg; ~/.mutt/view_attachment %s jpg '/Applications/Preview.app'
image/pjpeg; ~/.mutt/view_attachment %s jpg '/Applications/Preview.app'
image/png; ~/.mutt/view_attachment %s png '/Applications/Preview.app'
image/gif; ~/.mutt/view_attachment %s gif '/Applications/Preview.app'

#text/html; ~/.mutt/view_attachment %s html
#text/html; lynx -dump %s; copiousoutput; nametemplate=%s.html
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Unidentified files
application/octet-stream; ~/.mutt/view_attachment %s "-"
