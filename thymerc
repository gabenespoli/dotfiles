set :timer, 25*60
set :timer_break, 5*60
set :warning, 5*60
set :warning_color, 'red'
set :break_color, 'blue'
set :interval, 60
set :tmux, true
set :tmux_theme, "#[fg=brightyellow,bg=black][#[fg=%s]%s#[fg=brightyellow,bg=black]] "

# execute hook after each pomodoro
after do |seconds_left|
  `terminal-notifier -message "Thyme's Up!"` if seconds_left == 0
end
