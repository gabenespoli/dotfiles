# keybindings
bind generic  <C-j> enter
bind generic  <C-f> move-page-down
bind generic  <C-b> move-page-up
bind generic  o     enter
bind diff     o     view-close
bind diff     i     view-next
bind stage    i     view-next
bind main     i     view-next
bind status   i     view-next
bind stage    o     view-close
bind generic  u     view-next
bind stage    u     view-next
bind status   u     view-next
bind status   -     status-update
bind stage    -     status-update

# colors
# https://github.com/jonas/tig/blob/master/doc/tigrc.5.adoc#color-command
color cursor			      15 10
color title-focus		    15 8
color title-blur	      0 8
color stat-staged       green default
color stat-unstaged     red default
color stat-untracked    red default
color "Author: "		    cyan default
color "AuthorDate: "		cyan default
color "Commit: "		    cyan default
color "CommitDate: "		cyan default
color directory         cyan default
color main-tracked      yellow default
color main-remote       blue default
color main-head         yellow black
color main-ref          green default
color main-tag          5 default
color main-local-tag    5 default
color id                cyan default
color date              8 default
color author            8 default
color graph-commit      12 default

set main-view	= line-number:no,interval=5 date:no id:yes author:no commit-title:yes,graph,refs,overflow=no
