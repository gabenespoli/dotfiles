# default to vim editing mode
set editing-mode vi

# prepend prompt with character indicating the editing mode
set show-mode-in-prompt on
set vi-ins-mode-string \1\e[1;33m\2+\1\e[m\2
set vi-cmd-mode-string \1\e[1;32m\2:\1\e[m\2
set emacs-mode-string \1\e[35m\2@\1\e[m\2

# vi settings                                         
$if mode=vi                
    set keymap vi-command
    "\C-l": clear-screen
    
    set keymap vi-insert
    "jk": vi-movement-mode
    "\C-p": history-search-backward
    "\C-n": history-search-forward
    "\C-a": beginning-of-line
    "\C-e": end-of-line
    "\C-d": forward-backward-delete-char
    "\C-l": clear-screen
    "\C-x": re-read-init-file
$endif

# scroll through history based on what is already entered at the prompt
#"\e[A": history-search-backward            # arrow up
#"\e[B": history-search-forward             # arrow down

set completion-ignore-case on
set show-all-if-ambiguous on

# up
# down
# forward
# backward
# forward-word
# backward-word
# end
# home
# delete
# backspace
# delete word
# backspace word
# delete to end
# delete to beginning
